<%= content_for :before_content do %>
  <%= link_to 'Back', review_framework_task_list_path, class: "govuk-back-link" %>
<% end %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl" data-qa="question-title"><%= t("review_framework.recommendations.title") %></h1>
    <p class="govuk-body">Recommendations below</p>
    <% @answers.each do |section, answers| %>
      <%= render partial: "review_framework/recommendations/#{section}", locals: { section: section, answers: answers } %>
    <% end %>
  </div>
</div>
