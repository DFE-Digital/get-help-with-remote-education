<% if update_date >= @today - 2.weeks %>
  <div 
    class="update-summary" 
    data-qa="<%= "#{title}-update-summary" %>"
  >
    <span class="govuk-heading-s update-summary-meta">updated <%= update_date.strftime('%-d %B') %></span>
    <%= render partial: 'show_hide_updates', locals: { show_updates: show_updates, page: page } %>
    <div 
      id="update-summary-content" 
      class="<%= 'update-summary-content' if has_content %>
        <%= 'hidden' unless show_updates && has_content %>"
      data-qa="<%= "update-summary__#{show_updates ? 'visible' : 'hidden'}" %>"
      <%= 'data-empty' unless has_content %>
    >
      <%= yield %>
    </div>
  </div>
<% end %>